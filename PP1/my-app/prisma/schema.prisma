generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int       @id @default(autoincrement())  //different id for each user(primary key)
  email     String    @unique //email-needs to be different for all users
  password  String    //password
  firstName String
  lastName  String
  avatar    String?  //optional
  phone     String?  //optional
  role Role @default(USER)
  createdAt DateTime  @default(now())  //time it is created
  updatedAt DateTime  @updatedAt  //time it is updated
  codeTemplates CodeTemplate[]  //code templates
  blogPosts    BlogPost[]
  comments     Comment[]
  reports      InappropriateContentReport[]
}

enum Role { 
  USER 
  ADMIN 
}



